# Window management
alt + shift + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

alt + {_,shift + }Tab
  bspc node -f {next.local,prev.local}

super + @space
  bspc node -t '~'{floating,tiled}

super + shift + c
  bspc node -c

super + {t,f}
  bspc node -t {tiled,fullscreen}

super + {Tab,grave}
  bspc {node,desktop} -f last

super + {_,shift + }{1-8}
  bspc {desktop -f,node -d} '^{1-8}'

super + alt + {Left,Right,Up,Down}
  bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

super + control + {Left,Right,Up,Down}
  bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}

#Workspaces
ctrl + alt + {Left,Right}
  bspc desktop -f {prev.local,next.local}

super + m
  bspc desktop -l next

# Window manager
super + Escape
  pkill -USR1 -x sxhkd

super + alt + {e,r}
  bspc {quit,wm -r}

# Apps
super + Return
  st

super + d
  eww o applauncher

super + shift + d
  rofi -show drun

super + s
  flameshot gui

super + shift + s
  gscreenshot -sc

super + p
  picom

super + shift + p
  pkill picom

# Media
super + F6
  playerctl previous

super + F7
  playerctl play-pause

super + F8
  playerctl next